{
  "name": "graphgist-portal-v3-api",
  "version": "0.0.1",
  "description": "GraphGist Portal",
  "main": "src/index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "test": "jest",
    "start-dev": "./node_modules/.bin/nodemon --watch src --ext js,graphql --exec babel-node  src/index.js",
    "build": "babel src -d build && shx cp .env-example build && shx cp src/schema.graphql build && shx cp src/graphgists/notify_admins_about_creation.ejs build/graphgists/notify_admins_about_creation.ejs",
    "start": "npm run build && node build/index.js",
    "prettier": "prettier --write",
    "clean-temp-dbs": "babel-node src/clean_temp_dbs.js"
  },
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^6.2.1",
    "@sentry/tracing": "^6.2.1",
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link-http": "^1.5.15",
    "apollo-server": "^2.14.2",
    "asciidoctor": "^2.2.0",
    "aws-sdk": "^2.840.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "ejs": "^3.1.5",
    "graphql-tag": "^2.12.4",
    "graphql-tools": "^7.0.5",
    "graphql-upload": "^12.0.0",
    "imagekit": "^3.1.2",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.8.1",
    "mathjax": "^3.1.2",
    "mathjax-full": "^3.1.2",
    "mkdirp": "^1.0.4",
    "neo4j-driver": "^4.2.3",
    "neo4j-graphql-js": "^2.19.4",
    "neo4j-temp-db": "git+https://github.com/silverlogic/neo4j-temp-db.git#v0.2.0",
    "node-fetch": "^2.6.1",
    "sharp": "^0.26.1",
    "shortid": "^2.2.15",
    "slugify": "^1.4.6",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "apollo-server-testing": "^2.13.1",
    "debug": "^4.3.1",
    "husky": "^1.3.1",
    "jest": "^26.0.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^2.0.5",
    "shx": "^0.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
