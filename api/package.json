{
  "name": "graphgist-portal-v3-api",
  "version": "0.0.1",
  "description": "GraphGist Portal",
  "main": "src/index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "test": "jest",
    "start-dev": "./node_modules/.bin/nodemon --watch src --ext js,graphql --exec babel-node  src/index.js",
    "build": "babel src -d build && shx cp .env build && shx cp src/schema.graphql build",
    "start": "npm run build && node build/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.3.1",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link-http": "^1.5.15",
    "apollo-server": "^2.14.2",
    "dotenv": "^7.0.0",
    "graphql-tag": "^2.10.1",
    "neo4j-driver": "^4.0.1",
    "neo4j-graphql-js": "^2.12.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "apollo-server-testing": "^2.13.1",
    "husky": "^1.3.1",
    "jest": "^26.0.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1",
    "shx": "^0.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
